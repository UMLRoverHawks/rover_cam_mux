#include <ros/ros.h>

#include <image_transport/image_transport.h>
#include <cv_bridge/cv_bridge.h>
#include <sensor_msgs/image_encodings.h>
#include <opencv2/imgproc/imgproc.hpp>
#include <opencv2/highgui/highgui.hpp>
#include <opencv2/core/core.hpp>

namespace enc = sensor_msgs::image_encodings;

static const char WINDOW[] = "Image window";

class CameraMux
{
  ros::NodeHandle nh_;
  image_transport::ImageTransport it_;
  image_transport::Subscriber image_sub0_;
  image_transport::Subscriber image_sub1_;
  image_transport::Publisher image_pub_;
  
public:
  CameraMux()
    : it_(nh_)
  {
    //image_pub_ = it_.advertise("out", 1);
    image_pub_ = it_.advertise("image_detect0", 1);
    image_sub0_ = it_.subscribe("image_raw0", 1, &CameraMux::imageCb, this);
    image_sub1_ = it_.subscribe("image_raw0", 1, &CameraMux::imageCb, this);

    cv::namedWindow(WINDOW);
  }

  ~CameraMux()
  {
    cv::destroyWindow(WINDOW);
  }

  void imageCb(const sensor_msgs::ImageConstPtr& msg)
  {
    cv_bridge::CvImagePtr cv_ptr;
    try
    {
      cv_ptr = cv_bridge::toCvCopy(msg, enc::BGR8);
    }
    catch (cv_bridge::Exception& e)
    {
      ROS_ERROR("cv_bridge exception: %s", e.what());
      return;
    }

    
    image_pub_.publish(cv_ptr->toImageMsg());
  }

};

int main(int argc, char** argv)
{
  ros::init(argc, argv, "camera_mux");
  CameraMux cmux;
  ros::spin();
  return 0;
}
